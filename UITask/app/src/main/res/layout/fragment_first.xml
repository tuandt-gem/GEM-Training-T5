<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gem.vn.uitask.fragment.FirstFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:text="Linear Layout"
            android:textSize="@dimen/title_size"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/gradiant_background"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="0dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp">

            <View
                android:layout_weight="1"
                android:background="@color/colorBlue"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height"/>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height">

                <View
                    android:layout_weight="1"
                    android:background="@color/colorRed"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <View
                    android:layout_weight="1"
                    android:background="@color/colorPurple"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="@color/colorGreen"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height"/>

        </LinearLayout>

        <TextView
            android:text="Relative Layout"
            android:textSize="@dimen/title_size"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/gradiant_background"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp">

            <View
                android:id="@+id/view_blue"
                android:background="@color/colorBlue"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <View
                android:id="@+id/view_red"
                android:background="@color/colorRed"
                android:layout_toEndOf="@id/view_blue"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/view_green"
                android:background="@color/colorGreen"
                android:layout_alignParentEnd="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <View
                android:layout_toStartOf="@id/view_green"
                android:layout_below="@id/view_red"
                android:background="@color/colorPurple"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

        </RelativeLayout>

        <TextView
            android:text="Absolute Layout"
            android:textSize="@dimen/title_size"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/gradiant_background"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>

        <AbsoluteLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_x="0dp"
                android:layout_y="0dp"
                android:text="(0, 0)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_x="100dp"
                android:layout_y="50dp"
                android:text="(100, 50)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_x="200dp"
                android:layout_y="20dp"
                android:text="(200, 20)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_x="300dp"
                android:layout_y="80dp"
                android:text="(300, 80)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </AbsoluteLayout>

        <Button
            android:id="@+id/bt_next_fragment"
            android:text="Next Fragment"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>
