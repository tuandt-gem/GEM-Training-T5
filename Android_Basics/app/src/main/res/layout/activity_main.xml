<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF80"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#408080"
        android:gravity="center"
        android:text="@string/chonchucnang"
        android:layout_marginTop="30dp"
        android:textColor="#FFFF00"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btnNgheNhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/action_ngheNhac"
        android:onClick="onClickNgheNhac"
        />

    <Button
        android:id="@+id/btnXemthoiTiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/action_xemThoiTiet"
        android:onClick="onClickXemThoiTiet"
        />

</LinearLayout>